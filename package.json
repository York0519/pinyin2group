{
  "name": "pinyin2group",
  "version": "1.2.0-13.0",
  "description": "基于pinyin4js的通讯录分组排序工具",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "scripts": {
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "build": "rm -rf dist && tsc",
    "prepublish": "npm run build",
    "lint": "tslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/York0519/pinyin2group"
  },
  "keywords": [
    "pinyin",
    "拼音",
    "通讯录",
    "分组",
    "排序",
    "首字母",
    "letter",
    "initials",
    "first letter",
    "Address Book",
    "Contacts"
  ],
  "author": "York <wuyuqiang1993@21cn.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "bunyan": "^1.8.12",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^13.1.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "pinyin4js": "^1.3.18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  }
}
