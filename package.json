{
  "name": "pinyin2group",
  "version": "1.0.0-4.0",
  "description": "基于[pinyin4js](https://github.com/superbiger/pinyin4js)的通讯录分组排序工具",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "scripts": {
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "build": "rm -rf dist && tsc",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/york17/pinyin2group"
  },
  "keywords": [
    "pinyin",
    "拼音",
    "通讯录",
    "分组",
    "排序",
    "首字母",
    "letter"
  ],
  "author": "York <wuyuqiang1993@21cn.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.3",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.1",
    "bunyan": "^1.8.12",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4"
  },
  "dependencies": {
    "pinyin4js": "^1.3.17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  }
}
