  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/main.ts",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "args": [
        "|",
        "${workspaceRoot}/node_modules/.bin/bunyan",
        "-L"
      ],
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest",
      "args": [
        "--forceExit",
        "--coverage",
        "--verbose",
        "--detectOpenHandles",
        "--runInBand",
      ],
      "console": "integratedTerminal",
      "stopOnEntry": true,
      // "runtimeArgs": [
      //   "--inspect-brk",
      //   "${workspaceRoot}/node_modules/.bin/jest",
      //   "--runInBand"
      // ],
      // "port": "9229",
    }
  ]
}
